<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EasyVideoPlayer">

        <attr name="source" format="string" />

        <attr name="leftAction" format="enum">
            <enum name="none" value="0" />
            <enum name="restart" value="1" />
            <enum name="retry" value="2" />
        </attr>

        <attr name="rightAction" format="enum">
            <enum name="none" value="3" />
            <enum name="submit" value="4" />
            <enum name="customLabel" value="5" />
        </attr>

        <attr name="customLabelText" format="string" />
        <attr name="retryText" format="string" />
        <attr name="submitText" format="string" />
        <attr name="bottomText" format="string" />

        <attr name="restartDrawable" format="reference" />
        <attr name="playDrawable" format="reference" />
        <attr name="pauseDrawable" format="reference" />
        <attr name="fullscreenDrawable" format="reference" />
        <attr name="fullscreenExitDrawable" format="reference" />

        <attr name="hideControlsOnPlay" format="boolean" />
        <attr name="autoPlay" format="boolean" />

        <attr name="disableControls" format="boolean" />
        <attr name="enableSeekBar" format="boolean" />

        <attr name="themeColor" format="color" />

        <attr name="autoRotateInFullscreen" format="boolean" />

        <attr name="videoSizeLoading" format="float" />

        <attr name="startFullscreen" format="boolean" />
    </declare-styleable>

</resources>